require 'test_helper'

class StaticPagesControllerTest < ActionController::TestCase

  def setup
	@base_title = "RoR Sample App"
  end  
  test "should get home" do
    get :home 
    assert_response :success
    assert_select "title", "Home | Buttercup Sample App"
  end1
  test "should get about" do
   get :about
   assert_response :success
   assert_select "title", "About | Buttercup Sample App" 
  end
  test "should get contact" do
  get :contact
  assert_response :success
  assert_select "title", "Contact | Buttercup Sample App"
end

